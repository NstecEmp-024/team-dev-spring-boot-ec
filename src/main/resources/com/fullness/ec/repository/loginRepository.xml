<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fullness.ec.repository.loginRepository">
    <!-- <insert id="insert" parameterType="com.example.demo.entity.Account">
      <selectKey keyProperty="id" resultType="int" order="BEFORE">
        select nextval('account_id_seq')
      </selectKey>
      insert into account values(#{empId}, #{empName}, #{password}, #{role})
    </insert> -->
       <resultMap id="accountResultMap" type="com.fullness.ec.entity.Account">
        <id property="empId" column="employee_id"/>
        <result property="accountName" column="name"/>
        <result property="password" column="password"/>
        <association property="role" javaType="com.fullness.ec.entity.AccountRole">
            <id property="empId" column="id"/>
            <result property="empName" column="name"/>
        </association>
    </resultMap>
    <select id="selectByUserName" parameterType="String" resultMap="accountResultMap">
        SELECT
          a.empId as employee_id,
          a.accountName as name,
          a.password as password,
          ar.empId as id,
          ar.empName as name
        FROM
          account a
        LEFT JOIN
          account_role ar
        ON
          a.id = ar.empId
        WHERE
            a.accountName = #{username}
    </select>
</mapper>