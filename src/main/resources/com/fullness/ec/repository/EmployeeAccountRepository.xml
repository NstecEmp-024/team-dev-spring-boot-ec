<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fullness.ec.repository.EmployeeAccountRepository">
    <insert id="insert" parameterType="com.fullness.ec.entity.Account">
    INSERT INTO employee_account (employee_id, account_name, password)
    VALUES (#{empId}, #{accountName}, #{password})
</insert>
    <resultMap id="accountResultMap" type="com.fullness.ec.entity.Account">
        <id property="empId" column="employee_id"/>
        <result property="accountName" column="name"/>
        <result property="password" column="password"/>
        <association property="role" javaType="com.fullness.ec.entity.AccountRole">
            <id property="empId" column="id"/>
            <result property="empName" column="name"/>
        </association>
    </resultMap>
    <select id="selectByUserName" parameterType="String" resultMap="accountResultMap">
        SELECT
          a.empId as employee_id,
          a.accountName as name,
          a.password as password,
          ar.empId as id,
          ar.empName as name
        FROM
          account a
        LEFT JOIN
          account_role ar
        ON
          a.id = ar.empId
        WHERE
          a.accountName = #{accountName}
    </select>
    <select id="selectUnregisteredEmployeeNames" resultType="com.fullness.ec.entity.Employee">        
        SELECT 
          e.id AS id, e.name AS name
        FROM 
          employee e
        LEFT JOIN 
          employee_account a ON e.id = a.employee_id
        WHERE
          a.employee_id IS NULL
    </select>
    <select id="findById" parameterType="int" resultType="com.fullness.ec.entity.Employee">
        SELECT 
          id, name
        FROM 
          employee
        WHERE 
          id = #{value}
    </select>
</mapper>