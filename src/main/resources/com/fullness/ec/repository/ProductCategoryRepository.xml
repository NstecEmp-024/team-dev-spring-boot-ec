<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fullness.ec.repository.ProductCategoryRepository">
    <!-- 商品カテゴリ一覧を取得　-->
    <select id="findAllCategories" resultType="ProductCategory">
        select id as categoryId, name as categoryName
            from product_category order by id asc
    </select>
</mapper>